#![Solvers]
solver:Solver[a]
/controller:Controller[a]
observer:Observer(s)[a]

[c:loop observers]
solver:observer.init()
observer:solver.registerTrigger()
[/c]

solver:controller.new()
[c:loop while controller.goOn]
[c:loop observers]
solver:observer.step()
[/c]
[c:alt if time reaches a registered trigger]
      solver:observer.doTrigger()
      --[else]
      solver:nothing to do
    [/c]
solver:controller.performStep()
[c:loop observers]
controller:observer.recordEvent()
[/c]
[/c]

[c:loop observers]
solver:observer.finish()
[/c]
